<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:layout_height="match_parent"
    tools:context=".UploadFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <EditText
            android:layout_width = "380dp"
            android:layout_height = "wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="100dp"
            android:hint="Please Enter Reference ID"
            android:textColorHint="#7E7E7E"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:backgroundTint="#7E7E7E"
            android:fontFamily="@font/sanfro"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/reference_ID"/>
        <EditText
            android:layout_width = "380dp"
            android:layout_height = "wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Please Enter Room ID"
            android:textColorHint="#7E7E7E"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:backgroundTint="#7E7E7E"
            android:fontFamily="@font/sanfro"
            app:layout_constraintTop_toBottomOf="@id/reference_ID"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/room_id"/>
        <EditText
            android:layout_width = "380dp"
            android:layout_height = "wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Please Enter Room Password"
            android:textColorHint="#7E7E7E"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:backgroundTint="#7E7E7E"
            android:fontFamily="@font/sanfro"
            app:layout_constraintTop_toBottomOf="@id/room_id"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/room_pass"/>
        <Spinner
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:spinnerMode="dropdown"
            android:popupBackground="@color/white"
            android:overlapAnchor="false"
            android:background="@android:drawable/btn_dropdown"
            app:layout_constraintTop_toBottomOf="@id/room_pass"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/spinner"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Upload"
            android:textSize="15dp"
            android:fontFamily="@font/sanfro"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/button_design"
            app:layout_constraintTop_toBottomOf="@id/spinner"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/upload"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>